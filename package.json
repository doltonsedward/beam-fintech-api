{
  "name": "beam-api",
  "version": "1.0.0",
  "description": "beam api",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "test": "jest",
    "migrate": "npx sequelize-cli db:migrate && npx sequelize db:seed:all",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "testing": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset"
  },
  "author": "Doltons",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mysql2": "^2.3.3",
    "sequelize": "^6.12.5",
    "sequelize-cli": "^6.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^27.4.6",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
